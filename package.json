{
  "name": "joi4express",
  "version": "1.3.0",
  "description": "Joi validator for express, validates the request and the reponse",
  "main": "lib/index.js",
  "scripts": {
    "lint": "./node_modules/.bin/standard",
    "test": "NODE_ENV=test node_modules/.bin/nyc --reporter=text --reporter html --cache false node_modules/.bin/mocha --timeout=60000 test/**/*.js --reporter mochawesome"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/xsellier/joi4express.git"
  },
  "keywords": [
    "joi",
    "express",
    "request",
    "response",
    "validate"
  ],
  "license": "MIT",
  "engines": {
    "node": ">= 4.x.x",
    "npm": ">= 3.x"
  },
  "bugs": {
    "url": "https://gitlab.com/xsellier/joi4express/issues"
  },
  "homepage": "https://gitlab.com/xsellier/joi4express#readme",
  "peerDependencies": {
    "joi": ">= 10.x.x",
    "boom": ">= 5.x.x"
  },
  "devDependencies": {
    "boom": ">= 5.x.x",
    "chai": "^4.0.2",
    "dirty-chai": "^2.0.1",
    "joi": ">= 10.x.x",
    "mocha": "^6.2.0",
    "mochawesome": "^2.0.2",
    "nyc": "^14.1.1",
    "sinon": "^9.0.2",
    "standard": "^12.0.1"
  },
  "standard": {
    "globals": [
      "expect",
      "sinon",
      "assert",
      "Promise",
      "describe",
      "it"
    ],
    "env": [
      "mocha"
    ]
  }
}
